<div class="page-header">
<h1><%= @title %><small><%= @tagline %></small></h1>
</div>

<%= form_for(@user, :html => { :class => "form-stacked"} ) do |f| %>
<%= render 'shared/error_messages' %>
<div class="clearfix">
  <%= f.label :name %> 
  <div class="input">
  <%= f.text_field :name %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :email %> 
  <div class="input">
  <%= f.text_field :email %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :password %> 
  <div class="input">
  <%= f.password_field :password %>
  </div>
</div>
<div class="clearfix">
  <%= f.label :password_confirmation, "Confirmation" %> 
  <div class="input">
  <%= f.password_field :password_confirmation %>
  </div>
</div>
<div class="clearfix">
<div class="actions">
  <%= f.submit "Sign up", :class => "btn primary" %>
  <%= link_to "Reset", new_user_path,  :class => "btn" %>
</div>
</div>



<% end %>
