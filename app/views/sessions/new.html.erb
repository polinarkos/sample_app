<div class="page-header">
<h1><%= @title %><small><%= @tagline %></small></h1>
</div>

<%= form_for(:session, :url => sessions_path, :html => { :class => "form-stacked"} ) do |f| %>

<div class="clearfix">
  <%= f.label :email %> 
  <div class="input">
  <%= f.text_field :email %>
  </div>
</div>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<div class="clearfix">
  <%= f.label :password %> 
  <div class="input">
  <%= f.password_field :password %>
  </div>
</div>


<div class="clearfix">
<div class="actions">
  <%= f.submit "Sign in", :class => "btn primary" %>
  <%= link_to "Reset", signin_path,  :class => "btn" %>
</div>
</div>





<% end %>


